<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="detail_data"
            type="com.example.home.database.entity.LocalData" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <!--Detail标题栏 开始 -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/detail_appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentScrim="@color/design_default_color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:fitsSystemWindows="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    app:setImageSrcNormal="@{detail_data.imageId}"
                    android:fitsSystemWindows="true"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/detail_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways|snap"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>
        <!--Detail标题栏 结束 -->

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--用户信息 开始 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/detail_user_photo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="centerCrop"
                        app:setImageSrcCircle="@{detail_data.userPhoto}" />

                    <TextView
                        android:id="@+id/detail_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/detail_user_photo"
                        android:lines="1"
                        android:singleLine="true"
                        android:text="@{detail_data.userName}"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/detail_user_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/detail_user_name"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/detail_user_photo"
                        android:text="@{detail_data.time}"
                        android:textSize="12sp" />

                </RelativeLayout>
                <!--用户信息 结束 -->

                <!--文章信息 开始 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="@{detail_data.title}"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{detail_data.describe}"
                        android:textSize="14sp"/>

                </LinearLayout>
                <!--文章信息 结束 -->

                <!--评论信息 开始 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="评论 2"
                        android:layout_marginLeft="20dp"/>
                    <!--写下你的评论 开始 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_encyclopedias_magnifier"
                            android:layout_marginLeft="20dp" />

                        <EditText
                            android:layout_width="250dp"
                            android:layout_height="40dp"
                            android:hint="写下你的评论..."
                            android:focusable="false"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/icon_encyclopedias_magnifier"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>
                    <!--写下你的评论 结束 -->

                    <!--评论 开始 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/detail_rcv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <!--评论 结束 -->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="查看全部评论   >"
                        android:textSize="12sp"
                        android:layout_marginLeft="150dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="30dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_like"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_collection"
                            android:layout_marginRight="10dp"/>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/icon_comment"
                            android:layout_marginRight="20dp"/>

                    </LinearLayout>
                </LinearLayout>
                <!--评论信息 结束 -->

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>







</layout>