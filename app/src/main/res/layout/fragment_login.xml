<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="com.example.home.utils.Flag"/>

    </data>

    <RelativeLayout
        android:id="@+id/login_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/login_top_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="90dp"
            android:background="@color/black" />


        <EditText
            android:id="@+id/login_account"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="250dp"
            android:background="@drawable/style_round_editstyle"
            android:ems="10"
            android:hint="请输入账号"
            android:inputType="textPersonName"
            android:textColor="#cfcfcf"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/style_round_editstyle"
            android:ems="10"
            android:hint="请输入手机号"
            android:inputType="textPassword"
            android:textColor="#cfcfcf"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_login_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="120dp"
            android:layout_marginTop="370dp"
            android:background="@drawable/style_round_editstyle"
            android:text="登录"
            android:textColor="@color/white" />

        <CheckBox
            android:id="@+id/login_checkBox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/login_login_btn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="94dp"
            android:layout_marginTop="106dp" />

        <TextView
            android:id="@+id/login_agree_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_login_btn"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="108dp"
            android:layout_toRightOf="@+id/login_checkBox"
            android:text="同意《用户协议》和《隐私协议》"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="371dp"
            android:layout_toRightOf="@+id/login_login_btn"
            android:text="忘记密码？"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/login_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_forget_password"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/login_login_btn"
            android:text="注册"
            android:textSize="12sp" />

    </RelativeLayout>

</layout>